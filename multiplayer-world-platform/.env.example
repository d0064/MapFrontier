# ======================
# MULTIPLAYER WORLD PLATFORM
# Environment Configuration
# ======================

# Copy this file to .env and update the values

# ======================
# GENERAL SETTINGS
# ======================
NODE_ENV=development
COMPOSE_PROJECT_NAME=multiplayer-world-platform

# ======================
# DATABASE SETTINGS
# ======================
POSTGRES_DB=multiplayer_world_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-this-secure-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ======================
# BACKEND SETTINGS
# ======================
BACKEND_PORT=5000
BACKEND_HOST=localhost

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Game Configuration
MAX_PLAYERS_PER_COUNTRY=50
MOVEMENT_COOLDOWN_MS=1000
BORDER_PUSH_COOLDOWN_MS=5000
WAR_DECLARATION_COOLDOWN_MS=300000

# Map Configuration
DEFAULT_ZOOM_LEVEL=2
MIN_ZOOM_LEVEL=1
MAX_ZOOM_LEVEL=18

# ======================
# FRONTEND SETTINGS
# ======================
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:5000
REACT_APP_SOCKET_URL=http://localhost:5000

# ======================
# PRODUCTION SETTINGS
# ======================
# Uncomment and configure for production deployment

# SSL Configuration
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Domain Configuration
# DOMAIN=yourdomain.com
# SOCKET_CORS_ORIGIN=https://yourdomain.com
# REACT_APP_API_URL=https://yourdomain.com
# REACT_APP_SOCKET_URL=https://yourdomain.com

# External Database (if not using Docker database)
# DB_HOST=your-postgres-host
# DB_PORT=5432
# DB_SSL=true

# Redis Configuration (optional)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# ======================
# DEVELOPMENT SETTINGS
# ======================
LOG_LEVEL=info
DEBUG=false

# Enable development features
ENABLE_CORS=true
ENABLE_LOGGING=true

# ======================
# SECURITY SETTINGS
# ======================
# Change these in production!
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=change-this-admin-password

# Session Configuration
SESSION_SECRET=another-super-secret-key-for-sessions

# ======================
# MONITORING & ANALYTICS
# ======================
# Optional: Add your monitoring service keys
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=your-ga-id